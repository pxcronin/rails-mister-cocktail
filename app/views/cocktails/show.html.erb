<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>Recipe</h3>
  <ul>
    <% @doses.each do |dose| %>
    <li><%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %> <%= link_to 'Remove dose', cocktail_dose_path(dose), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></li>
    <% end %>
  </ul>
  <div class="options-flex">
    <p><%= link_to 'Back', cocktails_path %></p>
    <p><%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %></p>
  </div>
</div>